{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "ES2020"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "typeRoots": [
        "./src/@types"
      ],
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true, /* Skip type checking all .d.ts files. */
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }